<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id = "@+id/fragmentPage"
	android:background="#FFFFFFFF"
	tools:context=".myFragments.SwipePageFragment">


	<ImageView
		android:id="@+id/imageView"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/textViewDate"
		android:padding="5dp"
		android:src="@drawable/monday" />


	<TextView
		android:id="@+id/textViewDate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/imageView"
		android:padding="0dp"
		android:text="Date"
		android:textSize="14sp"
		android:textColor="@android:color/holo_red_dark"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/textViewEventNumber"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/textViewDate"
		android:layout_toRightOf="@id/imageView"
		android:padding="0dp"
		android:text="Event Number"
		android:textColor="@android:color/holo_red_dark"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/textViewEventName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/textViewEventNumber"
		android:layout_toRightOf="@id/imageView"
		android:padding="0dp"
		android:textSize="14sp"
		android:text="Event Name"
		android:textColor="@android:color/holo_red_dark"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/textViewTime"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/textViewEventName"
		android:layout_toRightOf="@id/imageView"
		android:padding="0dp"
		android:text="Time"
		android:textColor="@android:color/holo_red_dark"
		android:textSize="14sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/textViewrHours"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/textViewTime"
		android:layout_toRightOf="@id/imageView"
		android:textSize="14sp"
		android:text="Reg Hours"
		android:textColor="@android:color/holo_red_dark"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/textViewoHours"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/textViewrHours"
		android:layout_toRightOf="@id/imageView"
		android:padding="0dp"
		android:text="OT Hours"
		android:textColor="@android:color/holo_red_dark"
		android:textSize="14sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/textViewNoteheader"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/imageView"
		android:layout_marginStart="10dp"
		android:clickable="false"
		android:text=""
		android:textSize="14sp"
		android:textColor="@color/Navy"
		android:textStyle="bold" />


	<ImageView
		android:id="@+id/imageView1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textViewNoteheader"
		android:layout_alignParentStart="true"
		android:layout_marginTop="2dp"
		android:clickable="true"
		android:padding="2dp"
		android:scaleType="fitXY"
		android:src="@drawable/year2018"
		android:visibility="visible" />

</RelativeLayout>
