<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/queryField"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginStart="10dp"
	android:layout_marginTop="10dp"
	android:layout_marginEnd="10dp"
	android:layout_marginBottom="10dp"
	android:background="@color/Orange"
	tools:context=".myFragments.QueryFieldFragment">

	<TextView
		android:id="@+id/txtViewFieldName"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="10dp"
		android:padding="10dp"
		android:text="Select Field"
		android:textColor="@color/Black"
		android:textSize="20sp"
		android:textStyle="bold" />

	<Spinner
		android:id="@+id/field_spinner"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/txtViewFieldName"
		android:layout_marginStart="0dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="30dp"
		android:layout_toEndOf="@id/txtViewFieldName"
		android:backgroundTint="@color/Red" />

	<TextView
		android:id="@+id/txtViewItemName"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtViewFieldName"
		android:layout_alignParentStart="true"
		android:layout_marginLeft="0dp"
		android:layout_marginTop="30dp"
		android:padding="10dp"
		android:text="Select Item"
		android:textColor="@color/Black"
		android:textSize="20sp"
		android:textStyle="bold" />

	<Spinner
		android:id="@+id/itemEntries_spinner"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_below="@id/field_spinner"
		android:layout_alignBottom="@+id/txtViewItemName"
		android:layout_alignParentEnd="true"
		android:layout_marginStart="0dp"
		android:layout_marginTop="30dp"
		android:layout_marginEnd="30dp"
		android:layout_toEndOf="@id/txtViewItemName"
		android:backgroundTint="@color/Red" />

	<Button
		android:id="@+id/btnQuery"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtViewItemName"
		android:layout_centerInParent="true"
		android:layout_marginTop="10dp"
		android:padding="10dp"
		android:text="Query Result"
		android:textSize="20sp"
		android:textStyle="normal" />

	<TextView
		android:id="@+id/listViewMessage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/btnQuery"
		android:layout_alignParentStart="true"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:text="Message..............:"
		android:textColor="@color/Black"
		android:textSize="18sp"
		android:textStyle="bold" />
</RelativeLayout>


